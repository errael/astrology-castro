//
// IF, IF-ELSE
//
macro test_if_else {
    if(a) b;
    if(a) b else c;
    if(a) {b;c;}
    if(a) {b;c;} else {d;e;}

    if(a) b; if(c) d else e;
    if(a) if(c) d else e;

    if(a) b else if(c) d;
    if(a) {b;} else if(c) {d;}
    if(a) {b;} else { if(c) d; }

    if(a+b) c += d else {e; f;}
    z = if(a+b) c += d else {e; f;}
}

//
